# Notion API Configuration
NOTION_API_TOKEN=secret_your_notion_api_token_here

# Optional: Specific page IDs (will be created automatically if not provided)
# NOTION_ROOT_PAGE_ID=
# NOTION_INBOX_DB_ID=
# NOTION_NOTES_DB_ID=
# NOTION_RESOURCES_DB_ID=
# NOTION_PROJECTS_DB_ID=

# Timezone
TIMEZONE=Asia/Shanghai

# Daily Note Settings
DAILY_NOTE_TIME=09:00
DAILY_NOTE_ENABLED=true

# Auto Archive Settings
AUTO_ARCHIVE_ENABLED=true
AUTO_ARCHIVE_DAYS=30

# Backup Settings
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_SCHEDULE=0 2 * * *

# Review Reminders
WEEKLY_REVIEW_DAY=Sunday
WEEKLY_REVIEW_TIME=19:00
MONTHLY_REVIEW_DAY=1
MONTHLY_REVIEW_TIME=19:00

# Language
LANGUAGE=zh-CN

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
AI_MODEL=gemini-2.0-flash-exp
AI_ENABLED=true

# AI Workflow Settings
AI_DAILY_SUMMARY_TIME=21:00
AI_INBOX_PROCESSING_INTERVAL=2h
AI_TASK_EXTRACTION_TIME=09:00

# Debug Mode
DEBUG=false
